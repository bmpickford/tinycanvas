{
  "name": "tinycanvas",
  "version": "1.0.2",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "example"
  ],
  "scripts": {
    "build": "npm run clean && npm run build --ws --if-present",
    "clean": "npm exec -c 'rm -rf dist/' --ws",
    "doc": "for p in ./packages/*; do npx jsdoc2md $p/*.js > docs/$(basename $p).md; done",
    "test": "npm run test --ws --if-present",
    "size": "npm run size --ws --if-present",
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-commands": "^0.5.13",
    "@web/test-runner-junit-reporter": "^0.4.9",
    "@web/test-runner-playwright": "^0.8.8",
    "eslint": "^8.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "husky": "^7.0.4",
    "jsdoc": "^3.6.7",
    "jsdoc-to-markdown": "^7.1.0",
    "size-limit": "^7.0.5",
    "vite": "^2.7.2"
  }
}
