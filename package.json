{
  "name": "canvas-little-helper",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "lib/",
    "example/"
  ],
  "files": [
    "dist/*"
  ],
  "size-limit": [
    {
      "path": "lib/dist/index.js",
      "limit": "10 kB"
    }
  ],
  "scripts": {
    "build": "npm run build --workspaces && npm run copy && npm run compress && npm run zip",
    "copy": "cp -r example/dist dist/ && cp -r lib/dist/** dist",
    "test": "npm run test --workspace canvas-little-helper",
    "lint": "eslint lib/ example/",
    "prepare": "husky install",
    "compress": "terser --compress --mangle --mangle-props regex='/^_/' -o dist/index.compressed.js -- dist/index.js",
    "zip": "zip dist/index.zip dist/index.compressed.js -9dv",
    "size": "npm run build --workspace lib && size-limit"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "eslint": "^8.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "husky": "^7.0.4",
    "rollup-plugin-cleanup": "^3.2.1",
    "size-limit": "^7.0.5"
  },
  "dependencies": {
    "terser": "^5.10.0"
  }
}
