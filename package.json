{
  "name": "tinycanvas",
  "version": "1.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "example/",
    "packages/*"
  ],
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:example": "npm run build -w @tinycanvas/example && npm run core:minzip",
    "build:core": "npm run build -w @tinycanvas/core",
    "doc": "jsdoc -c ./jsdoc.conf.json dist",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint .",
    "size": "npm run size --workspaces --if-present",
    "core:minzip": "npm run build:core && npm run core:compress && npm run core:zip",
    "core:compress": "terser --compress --mangle --mangle-props regex='/^_/' -o dist/index.compressed.js -- dist/index.js",
    "core:zip": "zip dist/index.zip dist/index.compressed.js -9dv",
    "prepare": "husky install",
    "prepublish": "rm -rf dist/ && npm run build"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.3",
    "@web/test-runner": "^0.13.22",
    "@web/test-runner-commands": "^0.5.13",
    "@web/test-runner-junit-reporter": "^0.4.9",
    "@web/test-runner-playwright": "^0.8.8",
    "eslint": "^8.3.0",
    "eslint-plugin-mocha": "^9.0.0",
    "husky": "^7.0.4",
    "jsdoc": "^3.6.7",
    "jsdoc-tsimport-plugin": "^1.0.5",
    "size-limit": "^7.0.5",
    "terser": "^5.10.0"
  }
}
